            { "key": "Body", "value": "ACCEPT SH001", "type": "text" }
          ]
        },
        "url": {
          "raw": "{{base_url}}/api/whatsapp/webhook",
          "host": ["{{base_url}}"],
          "path": ["api", "whatsapp", "webhook"]
        }
      },
      "response": []
